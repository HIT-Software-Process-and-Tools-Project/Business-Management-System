<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wms.mapper.StorageMapper">

    <select id="pageCC" resultType="com.wms.entity.Storage">
        select * from storage ${ew.customSqlSegment}
    </select>

    <select id="getInventoryTransaction" resultType="InventoryTransaction" parameterType="java.lang.Integer">
        select inventory_transaction.iti_id, inventory_transaction.u_id,
               inventory_transaction.i_id_s, inventory_transaction.il_id_d,
               inventory_transaction.quantity
        from inventory_transaction
        where inventory_transaction.u_id = #{u_id}
    </select>

    <insert id="insertStorageTransaction" parameterType="StorageTransaction">
        insert storage_transaction(u_id, i_id_s, il_id_d, quantity)
        select #{u_id}, #{i_id_s}, #{il_id_d}, #{quantity}
    </insert>
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wms.entity.Storage">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, remark
    </sql>

</mapper>
